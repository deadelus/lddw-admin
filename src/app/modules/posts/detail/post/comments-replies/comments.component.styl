$color1st = #333334
$bgBar = $color1st
$bg = #E9EBEE
$font = #000000
$font2 = #A1A1A1
$font3 = #F6F7F9
$fontBtnStandart = #606672
$liked = #F05228

img
    width: 100%

.replies
    width: 100%
    padding-left: 45px
    .more
        display: block
        text-align: center
        font-size: 1.2rem
        font-weight: bold
        line-height: 20px
        height 20px
    .comment
        display: flex
        flex-direction: row
        text-align: left
        justify-content: left
        padding 0 15px
        margin 15px 0 0 0
        .user-info
            display: block
            width: 20px
            margin: 0
            padding: 0
            .avatar
                width: 20px
                height: 20px
                overflow: hidden
                border-radius: 20px
                margin: auto
        .comment-body
            font-size: 1.4rem
            margin: 0
            padding-left: 15px
            width: 100%
            .action-bar
                margin: auto
                padding: 0
                font-size: 1.2rem
                a
                    display inline
                    width: auto
            .comment-area
                margin 0
                text-align: left
                .name
                    display inline
            .comment-form
                .comment-field
                    position relative
                    input
                        width: 100%
                        text-align: right
                        font-size: 1.5rem
                        line-height: 24px
                        height 30px
                        padding: 0 60px 0 5px
                        outline: none
                        border: none
                        text-align: left
                    a.upload
                        position absolute
                        display: block
                        top: 0
                        right 0
                        width: 20px
                        height 20px
                        margin: 5px
                        svg
                            width: 20px
                            fill: $fontBtnStandart

