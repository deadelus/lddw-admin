$color1st = #333334
$bgBar = $color1st
$bg = #E9EBEE
$font = #000000
$font2 = #A1A1A1
$font3 = #F6F7F9
$fontBtnStandart = #606672
$liked = #F05228

img
  width: 100%

.comment
  display: flex
  flex-direction: row
  text-align: left
  justify-content: left
  padding 0 15px
  margin 15px 0 0 0
  .user-info
    display: block
    width: 30px
    margin: 0
    padding: 0
    .avatar
      width: 30px
      height: 30px
      overflow: hidden
      border-radius: 30px
      margin: auto
      img
        width: 100%
        height: auto
  .comment-body
    font-size: 1.4rem
    margin: 0
    padding-left: 15px
    width: 100%
    .action-bar
      margin: auto
      padding: 0
      font-size: 1.2rem
      a
        display inline
        width: auto
